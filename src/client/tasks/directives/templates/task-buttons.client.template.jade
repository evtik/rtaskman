section.tm-task-buttons(data-ng-hide="vm.currentTask.id === task.id && \
  (vm.editingProperty === 'deadline' || \
  vm.editingProperty === 'content')")
  i.fa.fa-calendar(title="{{vm.deadlineTip(task.deadline)}}"
    data-ng-click="vm.edit(task, 'deadline')")
  span &#124
  i.fa.fa-sort(title="Drag to change task priority"
    tm-task-draggable="{{project._id}}-#%&-{{$index}}")
  span &#124
  i.fa.fa-pencil(title="Edit task" data-ng-click="vm.edit(task, 'content')")
  span &#124
  i.fa.fa-trash(title="Delete task" data-ng-click="vm.remove(task, $index)")
